{
  "name": "vue-template-in-string-loader",
  "private": true,
  "version": "0.0.1",
  "description": "Compile Vue templates in template strings at build time.",
  "main": "dist/index.js",
  "scripts": {
    "prepublishOnly": "npm run build",
    "clear": "rimraf 'dist/*'",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch",
    "build": "npm run clear && npm run tsc",
    "lint": "tslint -p tsconfig.json -t verbose",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@vue/component-compiler-utils": "^3.0.2",
    "loader-utils": "^1.2.3",
    "vue-template-compiler": "^2.6.10"
  },
  "devDependencies": {
    "@types/jest": "^24.0.22",
    "@types/loader-utils": "^1.1.3",
    "@types/node": "^12.12.7",
    "jest": "^24.9.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paleo/vue-template-in-string-loader.git"
  },
  "license": "CC0-1.0",
  "keywords": [
    "vue",
    "template",
    "string"
  ]
}