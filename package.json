    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.1",
    "tslint": "^6.0.0",
    "typescript": "^3.7.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomko-team/vue-template-in-string-loader.git"
